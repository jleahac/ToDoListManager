<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="projects.todolistmanager.AddAnItem">

    <EditText
        android:id="@+id/add_task"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:hint = "add an item"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="141dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:spinnersShown="true"
        android:calendarViewShown="false"
        android:layout_below="@+id/adder"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/adder"
        android:hint = "add"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="59dp"
        tools:layout_editor_absoluteX="233dp"
        android:layout_below="@+id/add_task"
        android:layout_alignRight="@+id/datePicker"
        android:layout_alignEnd="@+id/datePicker" />
    <Button
        android:id="@+id/cancel"
        android:hint = "cancel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="59dp"
        tools:layout_editor_absoluteX="233dp"
        android:layout_below="@+id/add_task"
        android:layout_alignLeft="@+id/datePicker"
        android:layout_alignStart="@+id/datePicker" />


</RelativeLayout>
